@model IEnumerable<Project.Models.Rider>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Scripts/images/logo.png" rel="icon" />
    <title>Online Hospital Management System</title>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="~/Scripts/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Scripts/css/style.css" rel="stylesheet">
    <script src="~/Scripts/js/jquery.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $('#doctorlist').show();
            $('.doctor li:first-child a').addClass('active');
            $('.doctor li a').click(function (e) {

                var tabDiv = this.hash;
                $('.doctor li a').removeClass('active');
                $(this).addClass('.active');
                $('.switchgroup').hide();
                $(tabDiv).fadeIn();
                e.preventDefault();

            });


        });
        function changeText() {
            if (document.getElementById("tog").innerHTML === "Customer &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;+") {
                document.getElementById("tog").innerHTML = "Customer &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-"
            }
            else {
                document.getElementById("tog").innerHTML = "Customer &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;+"
            }
        }

        function changeTextRider() {
            if (document.getElementById("tog1").innerHTML === "Rider &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;+") {
                document.getElementById("tog1").innerHTML = "Rider &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-"
            }
            else {
                document.getElementById("tog1").innerHTML = "Rider &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;+"
            }
        }

        function changeTextRetailer() {
            if (document.getElementById("tog2").innerHTML === "Retailer &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;+") {
                document.getElementById("tog2").innerHTML = "Retailer &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-"
            }
            else {
                document.getElementById("tog2").innerHTML = "Retailer &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;+"
            }
        }

        function changa() {
            document.getElementById("custid").value = arguments[0];
            document.getElementById("Rname").value = arguments[1];
            document.getElementById("Rphone").value = arguments[2];
            document.getElementById("Raddress").value = arguments[3];
            document.getElementById("Rcnic").value = arguments[4];
            let x = arguments[5].split(" ");
         
            document.getElementById("Rdate").value = x[0];

        }

    </script>
</head>
<body>
    <div class="container-fluid">

        <!--- Header Start -------->
        <div class="row header">

            <div class="col-md-10">
                <h2>Hospital Mangement System</h3>
            </div>

            <div class="col-md-2 ">
                <ul class="nav nav-pills ">
                    <li class="dropdown dmenu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin <span class="caret"></span></a>
                        <ul class="dropdown-menu ">
                            <li><a href="profile.html">Change Profile</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="index.html">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
        <!--- Header Ends --------->

        <div class="row">

            <!----- Menu Area Start ------>
            <div class="col-md-2 menucontent">

                <a href="#"><h1>Dashboard</h1></a>

                <ul class="nav nav-pills nav-stacked">
                    <li role="presentation"><a href="/Supply/listSupply">Supply Record</a></li>
                    <li role="presentation"><a href="/Delivery/DailyDeliveryList">Delivery</a></li>
                    <li role="presentation"><a href="/RegularSale/RegularSaleList">Regular Sale</a></li>




                    <li role="presentation">
                        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#multiCollapseExample1" aria-expanded="false" aria-controls="multiCollapseExample1" id="tog" onclick="changeText()">Customer &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;+</button>

                        <div class="collapse multi-collapse" id="multiCollapseExample1">

                            <div class="card card-body" style=" margin-left: 5%; ">
                                <ul class="nav nav-pills nav-stacked">


                                    <li role="presentation">
                                        <a href="/Customer/listCustomer">List & Registration </a>
                                    </li>

                                    <li role="presentation">
                                        <a href="/Customer/customerBillings">Payments</a>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </li>


                    <li role="presentation">
                        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#multiCollapseExample2" aria-expanded="false" aria-controls="multiCollapseExample2" id="tog1" onclick="changeTextRider()">Rider &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;+</button>

                        <div class="collapse multi-collapse" id="multiCollapseExample2">

                            <div class="card card-body" style=" margin-left: 5%; ">
                                <ul class="nav nav-pills nav-stacked">


                                    <li role="presentation">
                                        <a href="/Rider/listRider">List & Registration </a>
                                    </li>

                                    <li role="presentation">
                                        <a href="/Rider/expenditureRider">Expenditures</a>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </li>


                    <li role="presentation">
                        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#multiCollapseExample3" aria-expanded="false" aria-controls="multiCollapseExample3" id="tog2" onclick="changeTextRetailer()">Retailer &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;+</button>

                        <div class="collapse multi-collapse" id="multiCollapseExample3">

                            <div class="card card-body" style=" margin-left: 5%; ">
                                <ul class="nav nav-pills nav-stacked">


                                    <li role="presentation">
                                        <a href="/Retailer/listRetailer">List & Registration </a>
                                    </li>

                                    <li role="presentation">
                                        <a href="/Retailer/paymentRetailer">Payments</a>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </li>


                </ul>
            </div>
            <!---- Menu Ares Ends  -------->
            <!---- Content Ares Start  -------->
            <div class="col-md-10 maincontent">
                <!----------------   Menu Tab   --------------->
                <div class="panel panel-default contentinside">
                    <div class="panel-heading">Manage Rider</div>
                    <!----------------   Panel body Start   --------------->
                    <div class="panel-body">
                        <ul class="nav nav-tabs doctor">
                            <li role="presentation"><a href="#doctorlist">Active Rider List</a></li>
                            <li role="presentation"><a href="#adddoctor">Add New Rider</a></li>
                            <li role="presentation"><a href="#addme">Non-Active Riders</a></li>
                            

                        </ul>

                        <!----------------   Display Doctor Data List Start  --------------->

                        <div id="doctorlist" class="switchgroup">
                            <table class="table table-bordered table-hover">
                                <tr class="active">
                                    <td>Id</td>
                                    <td>Name</td>
                                    <td>Phone Number</td>
                                    <td>Address</td>
                                    <td>CNIC</td>
                                    <td>Joining Date</td>
                                    <td>Options</td>
                                </tr>

                                @foreach (var s in Model)
                                {
                                    if (s.Active != 0)
                                    {

                                        <tr>
                                            <td>@s.Id</td>
                                            <td>@s.Name</td>
                                            <td>@s.Phone_Number</td>
                                            <td>@s.Address</td>
                                            <td>@s.CNIC</td>
                                            <td>@s.JoiningDate.Day/@s.JoiningDate.Month/@s.JoiningDate.Year</td>
                                            <td>
                                                <a href="#"><button type="button" id="@s.Id" value="@s.Id" onClick="changa(this.value, '@s.Name', '@s.Phone_Number', '@s.Address', '@s.CNIC', '@s.JoiningDate')" class="btn btn-primary" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button></a>
                                                <a href="/Rider/deleteRider/@s.Id" class="btn btn-danger"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </table>
                        </div>
                        <!----------------   Display Doctor Data List Ends  --------------->
                        <!------ Doctor Edit Info Modal Start Here ---------->


                        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">


                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                        <h4 class="modal-title" id="myModalLabel">Edit Rider Information</h4>
                                    </div>

                                    <div class="modal-body">
                                        <div class="panel panel-default">
                                            <div class="panel-body">
                                                <form class="form-horizontal" action="/Rider/ModifyRider" method="post">
                                                    <div class="form-group">
                                                        <label class="col-sm-2 control-label">Id</label>
                                                        <div class="col-sm-10">
                                                            <input type="number" class="form-control" id="custid" name="custid" readonly="readonly">
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="col-sm-2 control-label">Name</label>
                                                        <div class="col-sm-10">
                                                            <input type="text" class="form-control" name="Rname" id="Rname" placeholder="Name" required="required">
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="col-sm-2 control-label">Phone No.</label>
                                                        <div class="col-sm-10">
                                                            <input type="number" class="form-control" name="Rphone" id="Rphone" placeholder="Phone Number" required="required">
                                                        </div>
                                                    </div>


                                                    <div class="form-group">
                                                        <label class="col-sm-2 control-label">Address</label>
                                                        <div class="col-sm-10">
                                                            <input type="text" class="form-control" name="Raddress" id="Raddress" placeholder="Address" required="required">
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="col-sm-2 control-label">CNIC</label>
                                                        <div class="col-sm-10">
                                                            <input type="number" class="form-control" name="Rcnic" id="Rcnic" placeholder="CNIC" required="required">
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="col-sm-2 control-label">Joining Date</label>
                                                        <div class="col-sm-10">
                                                            <input type="date" class="form-control" name="Rdate" id="Rdate" placeholder="Joining Date" required="required">
                                                        </div>
                                                    </div>


                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                        <input type="submit" class="btn btn-primary" value="Update"></button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!----------------   Modal ends here  --------------->
                        <!----------------   Add Doctor Start   --------------->
                        <div id="adddoctor" class="switchgroup">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <form class="form-horizontal" action="/Rider/addRider" method="post">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Rider Phn No</label>
                                            <div class="col-sm-10">
                                                <input type="number" class="form-control" name="Rid" placeholder="Phone  Number" required="required">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Name</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" name="Rname" placeholder="Name" required="required">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Address</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" name="Raddress" placeholder="Address" required="required">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">CNIC</label>
                                            <div class="col-sm-10">
                                                <input type="number" class="form-control" name="Rcnic" placeholder="CNIC" required="required">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Joining Date</label>
                                            <div class="col-sm-10">
                                                <input type="date" class="form-control" name="Rdate" placeholder="Joining Date" required="required">
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            <div class="col-sm-offset-2 col-sm-10">
                                                <button type="submit" class="btn btn-primary">Add Rider</button>
                                            </div>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>

                        <div id="addme" class="switchgroup" style="display:none;">
                            <table class="table table-bordered table-hover">
                                <tr class="active">
                                    <td>Id</td>
                                    <td>Name</td>
                                    <td>Phone Number</td>
                                    <td>Address</td>
                                    <td>CNIC</td>
                                    <td>Joining Date</td>
                                    <td>Options</td>
                                </tr>

                                @foreach (var s in Model)
                                {
                                    if (s.Active == 0)
                                    {

                                        <tr>
                                            <td>@s.Id</td>
                                            <td>@s.Name</td>
                                            <td>@s.Phone_Number</td>
                                            <td>@s.Address</td>
                                            <td>@s.CNIC</td>
                                            <td>@s.JoiningDate.Day/@s.JoiningDate.Month/@s.JoiningDate.Year</td>
                                            <td>
                                                <a href="/Rider/retreiveRider/@s.Id"><button type="button" id="@s.Id" class="btn btn-primary">Active It</button></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </table>
                        </div>

                        <div id="addexxpend" class="switchgroup" style="display:none;">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <form class="form-horizontal" action="/Rider/addExpenditure" method="post">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Rider Id:</label>
                                            <div class="col-sm-10">
                                                <input type="number" class="form-control" name="rid" placeholder="Rider ID" required="required">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Date</label>
                                            <div class="col-sm-10">
                                                <input type="date" class="form-control" name="date" placeholder="Date" required="required">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Description</label>
                                            <div class="col-sm-10">
                                                <textarea id="description" class="form-control" name="description" rows="4" cols="50" placeholder="Enter Description" required="required"></textarea>
                                            </div>
                                        </div>




                                        <div class="form-group">
                                            <div class="col-sm-offset-2 col-sm-10">
                                                <button type="submit" class="btn btn-primary">Add Expenditure</button>
                                            </div>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>

                        <div id="listexpend" class="switchgroup" style="display:none;">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <form class="form-horizontal" action="#" method="post">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Rider Id:</label>
                                            <div class="col-sm-10">
                                                <input type="number" class="form-control" name="rid" placeholder="Rider ID" required="required">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">From</label>
                                            <div class="col-sm-10">
                                                <input type="date" class="form-control" name="fromdate" placeholder="Date" required="required">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">To</label>
                                            <div class="col-sm-10">
                                                <input type="date" class="form-control" name="todate" placeholder="Date" required="required">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-sm-offset-2 col-sm-10">
                                                <button type="submit" class="btn btn-primary">Search</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <table class="table table-bordered table-hover">
                                    <tr class="active">
                                        <td>Doctor ID</td>
                                        <td>Doctor Name</td>
                                        <td>Department</td>
                                        <td>Phone No.</td>
                                        <td>Options</td>
                                    </tr>

                                    <tr>
                                        <td>111</td>
                                        <td>Dharmesh</td>
                                        <td>Neurology</td>
                                        <td>123456789</td>
                                        <td>
                                            <a><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button></a>
                                            <a href="#" class="btn btn-danger"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                                        </td>
                                    </tr>

                                </table>
                            </div>
                        </div>





                        <!----------------   Add Doctor Ends   --------------->
                    </div>
                    <!----------------   Panel body Ends   --------------->
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
</body>
</html>